---
#layout: default.hbs # by default it is default.hbs, but you can specify another one
title: Mail Form #title in menu
number: 2 #position in menu
menuLevel: 3
hideInMenu: false #if true, will be hidden in menu
hideInBreadcrumbs: false #if true, will be hidden in breadcrumbs
#subpages: false #(only for first-level pages)
parent: Content #(only for second-level pages)
parent2: Form Elements #(only for third-level pages)
#parent3: #(only for fourth-level pages)
#parent4: #(only for fifth-level pages)
externalLink: false #(only for when page is link to external site)
#link: http://www.pixelant.se #(external link)
---

{{> breadcrumbs}}

<div class="container">
    <div class="row">
        <div class="col-md-3">
            {{> subNavigation}}
        </div>
        <div class="col-md-9">
            <form enctype="multipart/form-data" method="" name="id-1" class="form-horizontal" id="field-1" action="">
                <div>
                    <div class="csc-form-2 csc-form-element csc-form-element-textline">
                        <div class="form-group">
                            <div class="col-sm-3 control-label">
                                <label for="field-2">Name</label>
                            </div>
                            <div class="col-sm-5">
                                <input placeholder="Enter your name" class="form-control" id="field-2" type="" name="tx_form_form[tx_form][name]">
                            </div>
                        </div>
                    </div>
                    <div class="csc-form-3 csc-form-element csc-form-element-textarea">
                        <div class="form-group">
                            <div class="col-sm-3 control-label">
                                <label for="field-3">Message</label>
                            </div>
                            <div class="col-sm-5">
                                <textarea rows="3" cols="40" id="field-3" name="tx_form_form[tx_form][3]"></textarea>
                            </div>
                        </div>
                    </div>
                    <div class="csc-form-4 csc-form-element csc-form-element-submit">
                        <div class="form-group mail-submit ">
                            <div class="col-sm-offset-3 col-sm-5">
                                <input class="btn btn-default" type="submit" id="field-4" value="Submit form" name="tx_form_form[tx_form][4]">
                            </div>
                        </div>
                    </div>
                </div>
            </form>

        </div>
    </div>
</div>
